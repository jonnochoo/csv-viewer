html(ng-app="app")
  head  
    title CSV Viewer
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="css/site.css")
    link(rel="stylesheet", href="../bower_components/foundation/css/foundation.css")
    link(rel="stylesheet", href="../bower_components/foundation-icon-fonts/foundation-icons.css")
    link(href='http://fonts.googleapis.com/css?family=Inconsolata', rel='stylesheet', type='text/css')
  body(ng-controller="csvController as vm")
  
    div.navigation
      button.btn.small(ng-click="vm.showRaw()", ng-class="{ active: vm.viewType === 'raw'}")
        i.fi-clipboard-pencil 
        | Enter CSV
      button.btn.small(ng-click="vm.showData()", ng-class="{ active: vm.viewType === 'data'}")
        i.fi-magnifying-glass 
        | View as Table

    div.container
      textarea.textarea-csv(ng-model="csv", ng-show="vm.viewType === 'raw'", placeholder="Add CSV here...")

      table.table.table-striped(ng-show="vm.viewType === 'data'")
        tr(ng-repeat='row in vm.rows')
          td(ng-repeat='col in row track by $index') {{col}}

    script(src="../bower_components/angular/angular.js")
    script(src="js/papaparse.min.js")
    script(src="js/app.js")
    script(src="js/csvController.js")